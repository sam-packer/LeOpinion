[MASTER]
ignore=CVS,.git,.venv,__pycache__
ignore-patterns=.*_pb2.py,.*_pb2_grpc.py
jobs=0

[MESSAGES CONTROL]
# C0111: Missing docstring
# C0103: Invalid name
# R0903: Too few public methods
# W0718: Catching too general exception Exception (standard for robust long-running scrapers)
# R0917: Too many positional arguments
# R0914: Too many local variables
# W1201: Use lazy % formatting in logging
# W1203: Use lazy % formatting in logging
# C0415: Import outside toplevel (often needed for optional dependencies like asyncpg/chroma)
# W0613: Unused arguments (common in abstract method implementations)
# R0912: Too many branches
# R0915: Too many statements
# W0511: TODO/FIXME markers
# W1514: Using open without encoding (standard on modern Python 3, though 'utf-8' is better)
disable=C0111, R0903, C0103, W1203, W0718, R0917, R0914, W1201, C0415, W0613, R0912, R0915, W0511, W1514, R0801, R1705, R1702

[FORMAT]
# Modern screens are wide. 120 is standard, but 160 is fine for complex logic lines.
max-line-length=160

[BASIC]
# Allow shorter names like 'x', 'y', 'df', 'db'
good-names=i,j,k,ex,Run,_,fp,id,db,df,f

[DESIGN]
max-args=10
max-attributes=20